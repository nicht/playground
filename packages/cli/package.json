{
  "name": "@nicht/playground",
  "description": "Playground is a tool that helps you create new projects from templates quickly and efficiently.",
  "version": "0.0.2",
  "author": "Rodolfo Olivieri",
  "bin": {
    "playground": "./bin/run"
  },
  "bugs": "https://github.com/nicht/playground/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-autocomplete": "^0.2.0",
    "@oclif/plugin-commands": "^1.2.3",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-not-found": "^1.2.3",
    "@oclif/plugin-update": "^1.3.9",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "chalk": "^4.0.0",
    "enquirer": "^2.3.5",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "node-notifier": "^8.0.1",
    "nodegit": "^0.26.5",
    "nps-utils": "^1.7.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/node-notifier": "^6.0.1",
    "@types/nodegit": "^0.26.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4",
    "eslint": "^7.0.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "globby": "^10",
    "mocha": "^5",
    "nps": "^5.9.12",
    "nyc": "^14",
    "shelljs": "^0.8.4",
    "ts-node": "^8",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/nicht/playground",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "playground",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-commands",
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-update",
      "@oclif/plugin-not-found"
    ],
    "hooks": {
      "init": [
        "./lib/hooks/init",
        "./lib/hooks/clone-templates",
        "./lib/hooks/fetch-templates"
      ]
    }
  },
  "repository": "nicht/playground",
  "scripts": {
    "lint": "nps lint",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
